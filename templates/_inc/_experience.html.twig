<section class="wrapper spotlight {{ loop.index is divisible by (2) ? 'alt style2' : 'style1' }}">
    <div class="inner">
        <a href="#" class="image">
            <img src="{{ asset(experience.image.name) }}" alt="{{ experience.image.alt }}" />
        </a>
        <div class="content">
            <h2 class="major">{{ experience.title }}</h2>
            <p>{{ experience.description }}</p>
            {#<a href="#" class="special">Voir plus</a>#}
            <br>
            {% if front is same as (false) %}
                <p><b><i>Compétences</i></b></p>
                <p class="img-icons-{{ loop.index is divisible by (2) ? '2' : '1' }}">
                    {% for skill in experience.skills %}
                        <span>
                            <img class="img-icon" src="{{ asset(skill.image.name) }}" alt="{{ skill.image.alt }}">
                            <span>{{ skill.image.alt }}</span>
                        </span>
                    {% endfor %}
                </p>
            {% endif %}
        </div>
    </div>
    {% if loop.index is same as(3) and front %}
        <div class="inner left">
            <ul class="actions center">
                <li><a href="{{ path('experiences') }}" class="button">Toutes les expériences</a></li>
            </ul>
        </div>
    {% endif %}
</section>
